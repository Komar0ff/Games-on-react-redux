{
  "name": "games-on-2re",
  "version": "0.1.0",
  "description": "Isomorhic app on react/redux",
  "repository": {
    "type": "git",
    "url": "https://github.com/Komar0ff/games-on-2re"
  },
  "keywords": [
    "game",
    "webapp",
    "javascript"
  ],
  "author": {
    "name": "Komar0ff",
    "email": "binary.reptile@gmail.com",
    "url": "https://twitter.com/ilya_komar0ff"
  },
  "bugs": {
    "url": "https://github.com/Komar0ff/games-on-2re/issues"
  },
  "dependencies": {
    "effector": "^0.18.2",
    "effector-react": "^0.18.4",
    "emotion": "^10.0.7",
    "react": "^16.8.1",
    "react-dom": "^16.8.1",
    "react-emotion": "^10.0.0",
    "react-router": "^4.3.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "@babel/runtime": "^7.3.1",
    "babel-jest": "^24.1.0",
    "babel-loader": "^8.0.5",
    "clean-webpack-plugin": "^1.0.1",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.9.1",
    "enzyme-to-json": "^3.3.5",
    "fast-async": "^6.3.8",
    "file-loader": "^3.0.1",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "jest-emotion": "^10.0.7",
    "prettier": "^1.16.4",
    "progress-bar-webpack-plugin": "^1.12.1",
    "url-loader": "^1.1.2",
    "webpack": "4.29.3",
    "webpack-bundle-analyzer": "^3.0.3",
    "webpack-cli": "^3.2.3",
    "webpack-dev-server": "3.1.14",
    "webpack-merge": "^4.2.1"
  },
  "scripts": {
    "dev": "webpack-dev-server --hot --progress --color --config config/webpack.dev.config.js",
    "build": "yarn format && webpack --mode production --progress --color --config config/webpack.prod.config.js",
    "format": "prettier --write \"src/**/*.js\"",
    "test": "jest",
    "deploy": "yarn build && now ./build"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn format"
    }
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupTestFrameworkScriptFile": "<rootDir>/config/jest/setupTests.js",
    "moduleDirectories": [
      "src",
      "node_modules"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "jsx"
    ],
    "transform": {
      "^.+\\.(js|jsx)$": "babel-jest"
    }
  },
  "resolutions": {
    "babel-core": "7.0.0-bridge.0"
  }
}
