{
  "name": "games-on-react",
  "version": "0.1.0",
  "description": "games on react-effector",
  "repository": {
    "type": "git",
    "url": "https://github.com/Komar0ff/games-on-react"
  },
  "keywords": [],
  "author": {
    "name": "Komar0ff",
    "email": "binary.reptile@gmail.com",
    "url": "https://twitter.com/ilya_komar0ff"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Komar0ff/games-on-react/issues"
  },
  "dependencies": {
    "@emotion/core": "^10.0.10",
    "@emotion/styled": "^10.0.10",
    "effector": "0.18.6",
    "effector-react": "0.18.9",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-router": "^5.0.0",
    "router5": "7.0.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-react": "^7.0.0",
    "@babel/runtime": "^7.4.3",
    "babel-jest": "^24.7.1",
    "babel-loader": "^8.0.5",
    "clean-webpack-plugin": "^2.0.1",
    "compression-webpack-plugin": "^2.0.0",
    "css-loader": "^2.1.1",
    "fast-async": "^6.3.8",
    "file-loader": "^3.0.1",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^2.1.0",
    "jest": "^24.7.1",
    "jsdom": "^15.0.0",
    "prettier": "^1.17.0",
    "react-testing-library": "^6.1.2",
    "style-loader": "^0.23.1",
    "terser-webpack-plugin": "^1.2.3",
    "url-loader": "^1.1.2",
    "webpack": "4.30.0",
    "webpack-bundle-analyzer": "^3.3.2",
    "webpack-cli": "^3.3.1",
    "webpack-dev-server": "3.3.1",
    "webpack-merge": "^4.2.1",
    "whatwg-fetch": "^3.0.0"
  },
  "scripts": {
    "dev": "webpack-dev-server --hot --progress --color --config config/webpack.dev.config.js",
    "build": "yarn format && webpack --mode production --progress --color --config config/webpack.prod.config.js",
    "format": "prettier --write \"src/**/*.js\"",
    "test": "jest --watch --watchAll",
    "deploy": "yarn build && now ./build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn format",
      "pre-push": "jest"
    }
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/config/jest/setupTests.js"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/config/jest/__mocks__/fileMock.js",
      "\\.(css|scss)$": "<rootDir>/config/jest/__mocks__/styleMock.js"
    },
    "moduleDirectories": [
      "src",
      "node_modules"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "jsx"
    ],
    "transform": {
      "^.+\\.(js|jsx)$": "babel-jest"
    }
  },
  "resolutions": {
    "babel-core": "7.0.0-bridge.0"
  }
}
