{
	"name": "games-on-react",
	"version": "0.3.1",
	"description": "games on react-effector",
	"repository": {
		"type": "git",
		"url": "https://github.com/Komar0ff/games-on-react"
	},
	"keywords": [
		"games",
		"javascript",
		"kotlin",
		"kotlinjs",
		"rust",
		"react",
		"effector"
	],
	"author": {
		"name": "Komar0ff",
		"email": "binary.reptile@gmail.com",
		"url": "https://twitter.com/ilya_komar0ff"
	},
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/Komar0ff/games-on-effector/issues"
	},
	"dependencies": {
		"effector": "21.7.5",
		"effector-react": "21.2.1",
		"react": "^17.0.1",
		"react-dom": "^17.0.1"
	},
	"devDependencies": {
		"@babel/cli": "^7.12.10",
		"@babel/core": "^7.12.10",
		"@babel/plugin-proposal-class-properties": "^7.12.1",
		"@babel/plugin-proposal-pipeline-operator": "^7.12.1",
		"@babel/plugin-syntax-dynamic-import": "^7.8.3",
		"@babel/plugin-transform-runtime": "^7.12.10",
		"@babel/preset-env": "^7.12.11",
		"@babel/preset-react": "^7.12.10",
		"@babel/runtime": "^7.12.5",
		"@testing-library/react": "^11.2.5",
		"babel-jest": "^26.6.3",
		"babel-loader": "^8.2.2",
		"clean-webpack-plugin": "^3.0.0",
		"compression-webpack-plugin": "^7.1.2",
		"css-loader": "^5.0.1",
		"fast-async": "^6.3.8",
		"file-loader": "^6.2.0",
		"html-webpack-plugin": "^4.5.1",
		"husky": "^4.3.8",
		"jest": "^26.6.3",
		"jsdom": "^16.4.0",
		"prettier": "^2.2.1",
		"pretty-quick": "^3.1.0",
		"style-loader": "^2.0.0",
		"terser-webpack-plugin": "^5.1.1",
		"url-loader": "^4.1.1",
		"webpack": "5.19.0",
		"webpack-bundle-analyzer": "^4.4.0",
		"webpack-cli": "^4.5.0",
		"webpack-dev-server": "3.11.2",
		"webpack-merge": "^5.7.3",
		"whatwg-fetch": "^3.5.0"
	},
	"scripts": {
		"dev": "webpack-dev-server --hot --progress --color --config config/webpack.dev.config.js",
		"build": "webpack --mode production --progress --color --config config/webpack.prod.config.js",
		"format": "prettier --write \"src/**/*.js\"",
		"test": "jest --watch",
		"deploy": "yarn build && now ./build"
	},
	"husky": {
		"hooks": {
			"pre-commit": "pretty-quick --staged"
		}
	},
	"jest": {
		"testEnvironment": "jsdom",
		"setupFilesAfterEnv": [
			"<rootDir>/config/jest/setupTests.js"
		],
		"moduleNameMapper": {
			"\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/config/jest/__mocks__/fileMock.js",
			"\\.(css|scss)$": "<rootDir>/config/jest/__mocks__/styleMock.js"
		},
		"moduleDirectories": [
			"src",
			"node_modules"
		],
		"moduleFileExtensions": [
			"js",
			"json",
			"jsx"
		],
		"transform": {
			"^.+\\.(js|jsx)$": "babel-jest"
		}
	},
	"resolutions": {
		"babel-core": "7.0.0-bridge.0"
	}
}
